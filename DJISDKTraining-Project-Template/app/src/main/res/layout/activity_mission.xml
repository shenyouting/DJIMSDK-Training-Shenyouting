<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MissionActivity">
    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextureView
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:id="@+id/texture1"/>
    <LinearLayout
        android:id="@+id/osd_info"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:background="#21000000"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/flight_mode_show"
            android:text="Mode:N/A"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/gps_num"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="GPS:N/A"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/vertical_speed_show"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="V.S:N/A"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/horizontal_speed_show"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="H.S:N/A"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/alti_show"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="Alt:N/A"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/osd_info"
        android:id="@+id/main_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/locate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Locate"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView android:layout_width="wrap_content"
                android:id="@+id/side_button_container"
                android:layout_below="@+id/main_button_container"
                android:visibility="gone"
                android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/add_drone_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AddP"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Config"
                android:layout_weight="0.9"/>
            <Button
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:layout_weight="0.9"/>
            <Button
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_below="@+id/side_button_container"
        android:id="@+id/camera_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
    <Button
        android:id="@+id/camera_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mode"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/shoot_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Photo"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hide"
        android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>